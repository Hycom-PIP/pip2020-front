pipeline {
    agent any
    parameters {
        booleanParam(name: 'MODIFICATION', defaultValue: false, description: 'Jezeli chcemy wprowadziÄ‡ modyfikacje do projektu')
    }
    stages {
        stage('Build') {
            steps {
                sh '''#!/bin/bash
                npm install
                vue-cli-service build --mode prod
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            when {
                expression {params.MODIFICATION}
            }
            steps {
                sh '''#!/bin/bash
                cp -r dist/* /home/app/www/
                '''
            }
        }
    }
}
